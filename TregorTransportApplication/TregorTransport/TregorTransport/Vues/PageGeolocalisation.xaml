<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TregorTransport.Vues.PageGeolocalisation">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#0f0f0f">
            <Label Text="{Binding Longitude}" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding Latitude}" TextColor="White" FontSize="Large" HorizontalTextAlignment="Center"/>

            <Button Text="Test" WidthRequest="-1" Padding="0" Margin="25,50,25,0" CornerRadius="5" BorderColor="#12C15E" BorderWidth="2" 
                BackgroundColor="#12C15E" TextColor="#ffff" Command="{Binding BoutonCommandTest}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>